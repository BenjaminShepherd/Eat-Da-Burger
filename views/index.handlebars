<div class="col-12">

    <form class="add-form form-inline">
        <div class="form-group mb-2">
            <input class="form-control" type="text" name="add" id="name" placeholder="Burger Name">
            <button class="btn btn-primary ml-3" type="submit">Add</button>
        </div>
    </form>
    <br>
</div>


<div class="col-6">
    <h2>To Eat</h2>
    <br>

    <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block eat=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-6">
    <h2>Devoured Burgers</h2>
    <br>

    <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block eat=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>